<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JobSeekerPart.ApplicantProfile">
    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="-176dp">

        <include layout="@layout/navigationfile" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Applicant Information"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/avatarImage"
                    android:layout_width="141dp"
                    android:layout_height="134dp"
                    android:layout_gravity="center"
                    tools:srcCompat="@tools:sample/avatars" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textViewName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight = "3"
                        android:text="Name:" />
                    <TextView
                        android:id="@+id/textViewAge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight = "1"
                        android:text="Age:" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width = "match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/editTextPersonName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight = "3"
                        android:imeOptions="actionSend"
                        android:inputType="textPersonName" />
                    <EditText
                        android:id="@+id/editTextPersonAge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight = "1"
                        android:imeOptions="actionSend"
                        android:inputType="number" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Skills" />

                <EditText
                    android:id="@+id/editTextPersonSkills"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:imeOptions="actionSend"
                    android:inputType="textPersonName" />


                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email" />

                <EditText
                    android:id="@+id/editTextPersonEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:imeOptions="actionSend"
                    android:inputType="textPersonName" />


                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone Number" />

                <EditText
                    android:id="@+id/editTextPersonContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:imeOptions="actionSend"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/workInformationTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Work Experience"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/briefIntroTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Brief Introduction:" />

                <EditText
                    android:id="@+id/editTextBriefIntro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:imeOptions="actionSend"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/educationTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Education:" />

                <EditText
                    android:id="@+id/editTextEducation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:imeOptions="actionSend"
                    android:inputType="textPersonName" />
                <TextView
                    android:id="@+id/experienceTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Experience:" />

                <EditText
                    android:id="@+id/editTextExperience"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:imeOptions="actionSend"
                    android:inputType="textPersonName" />
                <TextView
                    android:id="@+id/LanguageTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Language:" />

                <EditText
                    android:id="@+id/LanguageEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:imeOptions="actionSend"
                    android:inputType="textPersonName" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/resumeUpload"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Resume Upload"></Button>

                    <TextView
                        android:id="@+id/linkButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#FFFFFF"
                        android:text="resume link"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="10sp" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </androidx.drawerlayout.widget.DrawerLayout>

</androidx.constraintlayout.widget.ConstraintLayout>